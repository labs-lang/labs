# "Global" processes
Listen = !(op = opinion) -> opinion <- op
Talk = op := opinion

comp Voter {
    interface = [opinion {0,1}]
    stigmergy = []
    behavior = VoterModel

    VoterModel = (Listen | Talk); VoterModel
}

system {
    environment = [op {0,1}]
    spawn = [Voter 10]
    link = true
}

check {
    Pr1 = Finally All Voter v1, All Voter v2, opinion of v1 = opinion of v2
}